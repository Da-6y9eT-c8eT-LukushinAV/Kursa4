<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelBooking</title>
    @RenderSection("Styles", required: false)

    <!-- Подключение Bootstrap CSS через CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Ваши дополнительные стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelBooking.styles.css" asp-append-version="true" />
    <!-- Подключение FontAwesome для иконок -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Подключение jQuery (вы уже добавили) -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Подключение Bootstrap CSS и JS (для карусели) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body class="bg-light text-dark">
    <!-- Навигация с использованием Bootstrap -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <!-- Верхний НавБар -->
            <div class="container">
                @* <a class="navbar-brand" asp-area="" asp-page="/Index">HotelBooking</a> *@
                <a class="navbar-brand" href="/">
                    <span class="highlight">H</span>otel<span class="highlight">B</span>ooking
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li> *@
                        @if (Context.Session.GetString("IsAdmin") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/ManageRooms">Управление номерами</a>
                                
                            </li>
                            <a class="nav-link text-dark" asp-page="/ManageHotels">Управление отелями</a>
                        }
                        <!-- Добавляем ссылки для авторизации -->
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Login">Login</a>
                        </li> *@
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Register">Register</a>
                        </li> *@
                    </ul>
                    @* <div class="d-flex align-items-center">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <a class="nav-link text-dark d-inline align-middle" asp-page="/Account">
                                Пользователь: @Context.Session.GetString("UserName")
                            </a>
                            <a class="nav-link text-dark d-inline align-middle" asp-page="/Logout">Выйти</a>
                            
                        }
                        else
                        {
                            <a class="nav-link text-dark d-inline align-middle" asp-page="/Login">Гость</a>

                            <a class="nav-link text-dark d-inline align-middle" asp-area="Identity" asp-page="/Register">Register</a>
                            
                            
                        }
                    </div> *@
                    @* <button id="theme-toggle">Переключить тему</button> *@

                    <div class="d-flex align-items-center">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <a class="btn btn-custom" asp-page="/Account">
                                Пользователь: @Context.Session.GetString("UserName")
                            </a>
                            <a class="btn btn-info mt-2" asp-page="/Logout">Выход</a>
                        }
                        else
                        {
                            <a class="btn btn-info mt-2 me-2" asp-page="/Login">Гость</a>
                            <a class="btn btn-info mt-2" asp-page="/Register">Регистрация</a>
                        }
                    </div>


                </div>
            </div>

           
        </nav>
    </header>
    
    <!-- Основной контейнер с контентом -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="col-12 pt-5 pb-5 bg-secondary text-light">
        <div id="client-testimonial-carousel" class="carousel slide" data-ride="carousel" style="height:200px;">
            <div class="carousel-inner" role="listbox">

                <!-- Отзыв 1 -->
                <div class="carousel-item active text-center p-4">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0"><i class="fa fa-quote-left"></i> Отличный сайт! Интерфейс интуитивно понятный, а бронирование прошло быстро и без проблем. Обязательно вернусь снова!</p>
                        <footer class="blockquote-footer">Анна Смирнова <cite title="Source Title">Постоянный клиент</cite></footer>
                        <p class="client-review-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </p>
                    </blockquote>
                </div>

                <!-- Отзыв 2 -->
                <div class="carousel-item text-center p-4">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0"><i class="fa fa-quote-left"></i> Дизайн просто потрясающий! Лёгкая навигация и красивая подача информации. Рекомендую!</p>
                        <footer class="blockquote-footer">Иван Петров <cite title="Source Title">Путешественник</cite></footer>
                        <p class="client-review-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </p>
                    </blockquote>
                </div>

                <!-- Отзыв 3 -->
                <div class="carousel-item text-center p-4">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0"><i class="fa fa-quote-left"></i> Сайт работает быстро, даже на мобильных устройствах. Понравилась возможность фильтрации номеров по параметрам.</p>
                        <footer class="blockquote-footer">Мария Коваленко <cite title="Source Title">Гость</cite></footer>
                        <p class="client-review-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </p>
                    </blockquote>
                </div>

                <!-- Отзыв 4 -->
                <div class="carousel-item text-center p-4">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0"><i class="fa fa-quote-left"></i> Очень полезный сайт для быстрого поиска и бронирования. Немного не хватает дополнительных опций, но в целом доволен!</p>
                        <footer class="blockquote-footer">Сергей Васильев <cite title="Source Title">Пользователь</cite></footer>
                        <p class="client-review-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <i class="far fa-star"></i>
                        </p>
                    </blockquote>
                </div>

                <!-- Отзыв 5 -->
                <div class="carousel-item text-center p-4">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0"><i class="fa fa-quote-left"></i> Приятно удивлена! Красивый и функциональный сайт. Служба поддержки быстро ответила на мой вопрос. Спасибо!</p>
                        <footer class="blockquote-footer">Екатерина Лебедева <cite title="Source Title">Пользователь</cite></footer>
                        <p class="client-review-stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </p>
                    </blockquote>
                </div>

            </div>
            <!-- Индикаторы для переключения -->
            <ol class="carousel-indicators">
                <li data-target="#client-testimonial-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#client-testimonial-carousel" data-slide-to="1"></li>
                <li data-target="#client-testimonial-carousel" data-slide-to="2"></li>
                <li data-target="#client-testimonial-carousel" data-slide-to="3"></li>
                <li data-target="#client-testimonial-carousel" data-slide-to="4"></li>
            </ol>
        </div>
    </div>

    <!-- Подвал с авторскими правами -->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HotelBooking - <a asp-area="" asp-page="/Index">Home </a>
            <a asp-area="" asp-page="/Register">Register </a>
        </div>
    </footer>

    <!-- Подключение jQuery и Bootstrap JS через CDN -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Дополнительные скрипты -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* @await RenderSectionAsync("Scripts", required: false) *@
    @RenderSection("Scripts", required: false)
    <script>
        // Проверяем текущий URL
        if (window.location.pathname !== '/' && window.location.pathname !== '/Index') {
          // Скрываем блок отзывов, если не главная страница
          document.getElementById('client-testimonial-carousel').parentElement.style.display = 'none';
         
        }
    </script>

    <script>
        document.getElementById("theme-toggle").addEventListener("click", function() {
            document.body.classList.toggle("bg-light");
            document.body.classList.toggle("text-dark");
            document.body.classList.toggle("bg-dark");
            document.body.classList.toggle("text-light");
            
        });
    </script>


    

</body>
</html>




